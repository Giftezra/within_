<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".calls.CallTaskActivity">

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp">


        <ImageButton
            android:id="@+id/speaker_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_speaker"
            android:background="@drawable/bottom_sheet"
            android:layout_gravity="start"
            android:contentDescription="speaker phone"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/add_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_addcall" android:layout_marginEnd="20dp"
            android:background="@drawable/bottom_sheet"
            android:contentDescription="add call button"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/mute_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bottom_sheet"
            android:contentDescription="mute call button"
            android:src="@drawable/ic_mute" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_layout"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/end_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/bottom_sheet"
            android:layout_gravity="center"
            android:backgroundTint="@color/red"
            android:contentDescription="@string/end_call"/>


    </LinearLayout>
</RelativeLayout>