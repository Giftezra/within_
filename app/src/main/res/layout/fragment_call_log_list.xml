<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/call_log_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/call_log_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:elegantTextHeight="true"
            android:elevation="@dimen/row_adapter_elevation"/>


        <TextView
            android:id="@+id/call_log_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:padding="5dp"
            android:gravity="center"
            android:elegantTextHeight="true"/>


    </LinearLayout>



    <ListView
        android:id="@+id/call_log_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/supplementaryColor"
        android:layout_below="@+id/call_log_toolbar"
        android:layout_marginTop="50dp"
        android:elevation="@dimen/layout_elevation"/>


</RelativeLayout>